<style>
    button {
      width: 90%;  
      background-color: plum;
      height: 50px;
      font-size: 25px;
      overflow: none !important;
    }
  
    #wrapper1,#wrapper2,#wrapper3 {
      background: peachpuff;
      overflow:hidden;
      transition: height 400ms;
      width: 90%;
    }
  
    #list1,#list2,#list3 {
      display: flex;
      align-items: center;
      list-style: none;
      justify-content: space-between;
    }
  
    p {
      font-size: 24px;
    }
  </style>
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  
  <body style="display: flex;flex-direction:column;align-items:center">
    <button id="button1">Shoe Laundry</button>
    <div id="wrapper1" class="open">
      <ul id="list1">
        <li>
          <form action="/addcart/?name=Calf Boots&price=500" method="POST">
            <img src="../../assests/images/price list/Calf Boots.png" alt="" name="img">
            <p name="name">Name : Calf Boots</p>
            <p name="price">Price : 500</p>
            <input type="number" placeholder="Enter Quantity" name="qty" required>
            <button style="font-size:20px;" >Add To cart</button>
          </form>
        </li>
        <li>
          <form action="/addcart/?name=High Boots&price=550" method="POST">
            <img src="../../assests/images/price list/High Boots.png" alt="">
            <p name="name">Name : High Boots</p>
            <p name="price">Price : 550</p>
            <input type="number" placeholder="Enter Quantity" name="qty" required>
            <button style="font-size:20px;" >Add To cart</button>
          </form>
        </li>
        <li>
          <form action="/addcart/?name=Shoe - Riding&price=550" method="POST">
            <img src="../../assests/images/price list/Shoe - Riding.png" alt="">
            <p name="name">Name : Shoe - Riding</p>
            <p name="price">Price : 550</p>
            <input type="number" placeholder="Enter Quantity" name="qty" required>
            <button style="font-size:20px;">Add To cart</button>
          </form>
        </li>
        <li>
          <form action="/addcart/?name=Heels&price=300" method="POST">
            <img src="../../assests/images/price list/Heels.png" alt="">
            <p name="name">Name : Heels</p>
            <p name="price">Price : 300</p>
            <input type="number" placeholder="Enter Quantity" name="qty" required>
            <button style="font-size:20px;" >Add To cart</button>
          </form>
        </li>
      </ul>
    </div>
    
    
    <script>
      $(function (event) {
        var b1 = $("#button1");
        var b2 = $("#button2");
        var b3 = $("#button3");
        var w1 = $("#wrapper1");
        var w2 = $("#wrapper2");
        var w3 = $("#wrapper3");
        var l1 = $("#list1");
        var l2 = $("#list2");
        var l3 = $("#list3");
    
        // w.height(l.outerHeight(true));
    
        b1.click(function () {
          if (w1.hasClass('open')) {
            w1.removeClass('open');
            w1.height(0);
          } else {
            w1.addClass('open');
            w1.height(l1.outerHeight(true));
          }
        });
  
        b2.click(function () {
          if (w2.hasClass('open')) {
            w2.removeClass('open');
            w2.height(0);
          } else {
            w2.addClass('open');
            w2.height(l2.outerHeight(true));
          }
        });
  
        b3.click(function () {
          if (w3.hasClass('open')) {
            w3.removeClass('open');
            w3.height(0);
          } else {
            w3.addClass('open');
            w3.height(l3.outerHeight(true));
          }
        });
    
      });
    </script>
  </body>